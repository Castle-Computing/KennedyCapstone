#set("title") {#(letterTitle)}


#set("body") {
<div class = "row">
    <div class = "col">
        <h3 class = "text-center"><u>#(letterTitle)</u></h3>
    </div>
</div>

<div class = "row">
    <div class = "col">
        <div id="pages" class="carousel slide" data-ride="carousel" data-wrap="false" data-interval="false">
            <ul class="carousel-indicators">
                #for(child in children) {
                    #if(numPages > 1) {
                        #if(isFirst) {
                            <li data-target="#pages" data-slide-to="0" class="active"></li>
                        } else {
                            <li data-target="#pages" data-slide-to="#(child.index)"></li>
                        }
                    }
                }
            </ul>
            <div class="carousel-inner">
                #for(child in children) {
                    #if(isFirst){
                        <div class="carousel-item active">
                            <img referrerPolicy="no-referrer" src="https://digital.lib.calpoly.edu/islandora/object/#(child)/datastream/JPG/view" class="img-fluid w-100">
                        </div>
                    } else {
                        <div class="carousel-item">
                            <img referrerPolicy="no-referrer" src="https://digital.lib.calpoly.edu/islandora/object/#(child)/datastream/JPG/view" class="img-fluid w-100">
                        </div>
                    }
                }

                #if(numPages > 1) {
                    <a class="carousel-control-prev" href="#pages" data-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </a>
                    <a class="carousel-control-next" href="#pages" data-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </a>
                }
            </div>
        </div>
        <div class = "col mt-3 text-center">
            <p class = "font-weight-bold">Transcription</p>
        </div>
        <div class = "row mt-3">
            <p>#(ocrText)</p>
        </div>
    </div>
